<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="objectClasses.AttendanceReport" table="attendance">
    <composite-id>
      <key-property name="writer"/>
      <key-property column="starts" name="begin" type="calendar_date"/>
      <key-property column="ends" name="end" type="calendar_date"/>
      <key-property name="regards"/>
    </composite-id>
    <property column="appeared" name="attended"/>
    <property column="totalLectures" name="lecturesHeld"/>
    <property name="updatedOn" type="calendar"/>
  </class>
</hibernate-mapping>
